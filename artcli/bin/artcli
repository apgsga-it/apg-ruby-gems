#!/usr/bin/env ruby
# encoding: utf-8
require 'slop'
require 'json'
require 'artcli'
require 'pp'
require 'apgsecrets'
require 'filesize'
require 'tty-spinner'
require "csv"

def help(opts)
  puts "A Command Line Tool for interacting with Artifactory, Version: #{Artcli::VERSION} "
  puts opts
end

opts = Slop.parse do |o|
  o.bool '-y', '--dry', 'Dry run, not executing the commands', default: false
  o.string '-u', '--user', 'Admin user for artifactory operations, will be prompted for the password'
  o.string '-r', '--uri', 'Base Artifactory URI, without https:// prefix. Default : artifactory4t4apgsga.jfrog.io/artifactory', default: 'artifactory4t4apgsga.jfrog.io/artifactory'
  o.string '-lr', '--listRepos' , 'List Local Repositories matching a optional filter', default:  nil
  o.string '-ar', '--artifactsReport' , 'Csv report of all artifacts of a local repository, parameter : repository'
  o.string '-lv', '--listVersions' , 'List all artifacts of a repository , which match a number of version filters (-v) and optional type parameter (-t), parameter: repository'
  o.string '-dv', '--deleteVersions' , 'Delete artifacts Versions of a repository, which match a number of version filters (-v) and optional type parameter (-t), parameter: repository'
  o.string '-er', '--emptyLocalRepo' , 'Empty repo = deleted all repo folders Local Repositories matching optional filter interactively', default: nil
  o.bool '-sr', '--storageReport' , 'Csv storage info report of all repositories', default: false
  o.string '-si', '--storageInfo' , 'Storage Info for a repository', default: nil
  o.separator ''
  o.separator 'additional supporting options:'
  o.array '-v', '--versions', "List of comma seperated version filters for aql queries"
  o.string '-t', '--itemType' , 'Item type for aql queries, can have to value <file>,<folder> or <any>', default: 'folder'
  o.string '-o', '--output', 'Output file for csv report output', default: 'report.csv'
  o.string '-s', '--separator', 'Column separator to use for writing csv reports', default: ','
  o.bool '-f' , '--force', 'Force prompt for password, normally password will be cached encrypted ', default: false
  o.on '-h', '--help' do
    help(o)
    exit
  end
end
# Test Preconditions
unless opts[:user]
  help(opts)
  puts 'Error: Artifactory Admin user must be specified with -u or --user'
  exit
end

# Establishment of Preconditions : Entering and Storing Password
secrets = Secrets::Store.new
secrets.prompt_only_when_not_exists(opts[:user], 'Enter artifactory password and enter return:    ',opts[:force])
puts "\n"
# Artifactory functionality
command = Artcli::Cli.new(opts[:uri], opts[:user], secrets.retrieve(opts[:user]), opts[:dry])
if opts[:listRepos]
  puts "Filtered Local Repositories for #{opts[:uri]} with filter: #{opts[:listRepos]} "
  pp command.list_repositories(opts[:listRepos])
end
if opts[:emptyLocalRepo]
  command.clean_repositories_interactive(opts[:emptyLocalRepo])
end
if opts[:listVersions]
  if opts[:versions].empty?
    help(opts)
    puts 'List artifact versions requires the --version <filter><,filter>..., with 1 to n versions filters'
    exit
  end
  pp command.list_items_by_version(opts[:listVersions], opts[:versions], opts[:itemType] )
end
if opts[:deleteVersions]
  if opts[:versions].empty?
    help(opts)
    puts 'Delete artifact versions requires the --version <filter><,filter>..., with 1 to n versions filters'
    exit
  end
  command.delete_version_items_interactively(opts[:deleteVersions], opts[:versions], opts[:itemType] )
end
if opts[:artifactsReport]
  report = Artcli::CsvReport.new(command,opts[:output],opts[:separator])
  report.artifacts_report(opts[:artifactsReport])
end
if opts[:storageReport]
  report = Artcli::CsvReport.new(command,opts[:output],opts[:separator])
  report.storage_info_report
end
if opts[:storageInfo]
  data = command.get_storage_info(opts[:storageInfo])
  puts "Storage info for #{opts[:storageInfo]}: "
  puts data
end
puts 'Done.'